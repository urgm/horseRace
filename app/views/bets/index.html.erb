<h1>Listing bets</h1>

<table>
  <tr>
    <th>Race no</th>
    <th>User name</th>
    <th>Type</th>
    <th>First horse no</th>
    <th>Second horse no</th>
    <th>Third horse no</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bets.each do |bet| %>
  <tr>
    <td><%= bet.race_no %></td>
    <td><%= bet.user_name %></td>
    <td><%= bet.type %></td>
    <td><%= bet.first_horse_no %></td>
    <td><%= bet.second_horse_no %></td>
    <td><%= bet.third_horse_no %></td>
    <td><%= bet.amount %></td>
    <td><%= link_to 'Show', bet %></td>
    <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
    <td><%= link_to 'Destroy', bet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

